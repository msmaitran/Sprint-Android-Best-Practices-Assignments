<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_crash_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/crash_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_crash_two"/>

    <Button
        android:id="@+id/btn_crash_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/crash_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_crash_one"
        app:layout_constraintBottom_toTopOf="@+id/btn_crash_three"/>

    <Button
        android:id="@+id/btn_crash_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/crash_three"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_crash_two"
        app:layout_constraintBottom_toTopOf="@+id/btn_crash_four"/>

    <Button
        android:id="@+id/btn_crash_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/crash_four"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_crash_three"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>